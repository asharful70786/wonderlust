<% layout("./layouts/boilerplate.ejs") -%>


<div class="row mt-3 offset-2">
    <div class="row g-3 align-items-center col-6">
        <h2>SIGN UP HERE</h2>
        <form  action="/singup" novalidate class="needs-validation" method="post" >
            <div class="form-group">
                <label for="username" class="form-label">USERNAME</label> <br>
                <input type="text" name="username" placeholder="ENTER USERNAME" class="form-control"
                    id="username" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Must have a username!</div>
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Enter email-id</label> <br>
                <input type="email" name="email" class="form-control" id="email" placeholder="Enter email-id" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">email must required !</div>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Enter password</label> <br>
                <input type="password" name="password" class="form-control" id="password" placeholder="Enter password" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">password must required !</div>
            </div>
            <br> <br>

            <button type="submit" class="btn btn-primary">SIGN UP</button>
        </form>
    </div>
</div>
